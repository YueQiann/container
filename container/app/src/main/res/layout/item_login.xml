<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_login"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/item_login_num_tv"
        android:text="账号："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_login_num_et"
        app:layout_constraintTop_toTopOf="@+id/item_login_num_et"
        app:layout_constraintBottom_toBottomOf="@+id/item_login_num_et"
        />

    <TextView
        android:id="@+id/item_login_pwd_tv"
        android:text="密码："
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_login_pwd_et"
        app:layout_constraintBottom_toBottomOf="@+id/item_login_pwd_et"
        app:layout_constraintEnd_toStartOf="@+id/item_login_pwd_et"
        />

    <EditText
        android:id="@+id/item_login_num_et"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:singleLine="true"
        android:inputType="text"
        android:layout_marginRight="@dimen/default_dp"
        android:padding="8dp"
        android:background="@drawable/bg_edit_gray"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_login_num_tv"
        app:layout_constraintBottom_toTopOf="@+id/item_login_pwd_et"
        />

    <EditText
        android:id="@+id/item_login_pwd_et"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:inputType="textPassword"
        android:singleLine="true"
        android:layout_marginRight="@dimen/default_dp"
        android:padding="8dp"
        android:background="@drawable/bg_edit_gray"
        app:layout_constraintTop_toBottomOf="@+id/item_login_num_et"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/item_login_btn"
        app:layout_constraintStart_toEndOf="@+id/item_login_pwd_tv"
        />

    <Button
        android:id="@+id/item_login_btn"
        android:text="确认"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/default_dp"
        app:layout_constraintTop_toBottomOf="@+id/item_login_pwd_et"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/item_login_back_btn"
        />

    <Button
        android:id="@+id/item_login_back_btn"
        android:text="返回"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/default_dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/item_login_btn"
        app:layout_constraintBottom_toBottomOf="@+id/item_login_btn"
        app:layout_constraintStart_toEndOf="@+id/item_login_btn"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
