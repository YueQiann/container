<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/item_device_cargo_btn"
        style="@style/sysbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginRight="@dimen/default_half_dp"
        android:layout_marginBottom="@dimen/default_half_dp"
        android:text="货道调试"
        app:layout_constraintBottom_toTopOf="@id/item_device_goods_btn"
        app:layout_constraintEnd_toStartOf="@id/item_device_face_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/item_device_face_btn"
        style="@style/sysbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/default_half_dp"
        android:layout_marginBottom="@dimen/default_half_dp"
        android:text="人脸识别调试"
        app:layout_constraintBottom_toTopOf="@id/item_device_all_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_device_cargo_btn"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/item_device_goods_btn"
        style="@style/sysbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/default_half_dp"
        android:layout_marginRight="@dimen/default_half_dp"
        android:text="货物识别调试"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_device_all_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_device_cargo_btn" />

    <Button
        android:id="@+id/item_device_all_btn"
        style="@style/sysbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginLeft="@dimen/default_half_dp"
        android:layout_marginTop="@dimen/default_half_dp"
        android:text="整体调试"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_device_goods_btn"
        app:layout_constraintTop_toBottomOf="@+id/item_device_face_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>
